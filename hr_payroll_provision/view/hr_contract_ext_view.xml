<?xml version="1.0" encoding="utf-8"?>
<odoo>
<!-- Inherit Form View to Modify it -->
<record id="hr_provision_contract_inherit" model="ir.ui.view">
    <field name="name">hr_provision_contract_inherit</field>
    <field name="model">hr.contract</field>
    <field name="inherit_id" ref="hr_xiii.view_contract_xiii_ext"/>
    <field name="arch" type="xml">
        <xpath expr="//page[last()]" position="after">
          <page name="provisions" string="Provisions"
                attrs="{'invisible': [('accumulate_xiii','=', False)]}">
              <group string="XIII" colspan="4">
                 <field name="provision_xiii_ids" nolabel="1"/>
              </group>
              <group >
                  <field name="pending_provision_xiii"/>
              </group>
               <group string="XIV" colspan="4">
                      <field name="provision_xiv_ids" nolabel="1"/>
              </group>
              <group>
                   <field name="pending_provision_xiv"/>
               </group>
          </page>
        </xpath>
    </field>
</record>
</odoo>